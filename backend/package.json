  "bugs": {
    "url": "https://github.com/iambpn/auths/issues"
  },
  "homepage": "https://github.com/iambpn/auths#readme",
  "devDependencies": {
    "@jest/globals": "^29.6.4",
    "@types/better-sqlite3": "^7.6.4",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.4",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/uuid": "^9.0.3",
    "drizzle-kit": "^0.19.13",
    "jest": "^29.6.4",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2",
